@model IEnumerable<GestaoFacil.Models.ServicoData>


<section class="content-header">
    <h1>
        Serviços
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Serviços</a></li>
        <li class="active">Serviços</li>
    </ol>
</section>


<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Gerenciar Serviço</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="pacientes1" class="table table-bordered table-striped">
                        <thead>
                            <tr>

                                <th>
                                    @Html.DisplayName("Código")
                                </th>
                                <th>
                                    @Html.DisplayName("Serviços")
                                </th>
                                <th>
                                    @Html.DisplayName("Preço")
                                </th>
                                <th>
                                    @Html.DisplayName("Ativo")
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ServicoId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.preco)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.IsDescontinuado)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ServicoId">Editar</a> |
                                    <a asp-action="Delete" asp-route-id="@item.ServicoId">Excluir</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>