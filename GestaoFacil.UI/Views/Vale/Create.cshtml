@model GestaoFacil.Models.ValeData



<link rel="stylesheet" href="~/css/site.css">

<div class="box box-primary">

    <div class="box-header with-border">
        <h3 class="box-title">Cadastro de vale</h3>
    </div>

    <!-- /.box-header -->
    <!-- form start -->
    <form asp-action="Create">


        <div class="form-row">


            <div class="form-group escodeID">
                <label asp-for="ValeId" class="control-label"></label>
                <input asp-for="ValeId" class="form-control" />
                <span asp-validation-for="ValeId" class="text-danger"></span>
            </div>


            <div class="form-group col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label">Valor</label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>




            <div class="form-group col-md-3">
                <label id="lblTeste">Colaborador(a)</label>
                @Html.DropDownList("FuncionarioId", (IEnumerable<SelectListItem>)ViewBag.TiposFichero, "", new { @class = "form-control form-control-select2 select" })
            </div>
        </div>


        <div class="form-row">
            <div class=" offset-6 col-md-6" style="text-align: left;">
                <button type="submit" class="btn btn-primary">Salvar</button>
            </div>
        </div>

        <div class="container justify-content-lg-start" style="padding-bottom: 10px;"></div>

    </form>
</div>