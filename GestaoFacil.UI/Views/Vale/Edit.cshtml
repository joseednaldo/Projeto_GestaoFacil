@model GestaoFacil.Models.ValeData


<link rel="stylesheet" href="~/css/site.css">

<div class="box box-primary">

    <div class="box-header with-border">
        <h3 class="box-title">Atualiza vale</h3>
    </div>

    <!-- /.box-header -->
    <!-- form start -->
    <form asp-action="Edit">

        <div class="form-row">


            <div class="form-group escodeID">
                <label asp-for="ValeId" class="control-label"></label>
                <input asp-for="ValeId" class="form-control" />
                <span asp-validation-for="ValeId" class="text-danger"></span>
            </div>


            <div class="form-group col-md-4">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group col-md-3">
                <label class="control-label">Preço</label>
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>
        
        <div class="form-row">
            <div class=" offset-4 col-md-6" style="text-align: left;">
                <input type="submit" value="Save" class="btn btn-primary" />
                |
                <a asp-action="Index" class="btn btn-primary texto-inicial">Voltar</a>
            </div>
        </div>

        <div class="container justify-content-lg-start" style="padding-bottom: 10px;"></div>

    </form>
</div>
